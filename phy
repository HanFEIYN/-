#include<stdio.h>
#include<string.h>
int main()
{
	char str[]="2+2*3+2/2-1";
	int c=str[0]-'0',C=str[0]-'0';
	int i,j;
	for(i=1;i<strlen(str);i++)
	{
		if(str[i]=='*')
		{
			int a=str[i+1]-'0';
			c=c*a;
			i++;
		}
		else if(str[i]=='/')
		{
			int b=str[i+1]-'0';
			c=c/b;
			i++;
		}
	}
	for(j=1;j<strlen(str);j++)
	{
		if(str[j]=='+')
		{
			int d=str[j+1]-'0';
			C=C+d;
			j++;
		}
		else if(str[j]=='-')
		{
			int e=str[j+1]-'0';
			C=C-e;
			j++;
		}
	}
	C+=c;
	printf("C=%d\n",C);
	return 0;
}


#include<stdio.h>
#include<string.h>
int main()
{
	char str[]="4*3/2*1/2*4/4*6";
	int c=str[0]-'0';
	int i;
	for(i=1;i<strlen(str);i++)
	{
		if(str[i]=='*')
		{
			int a=str[i+1]-'0';
			c=c*a;
			i++;
		}
		else if(str[i]=='/')
		{
			int b=str[i+1]-'0';
			c=c/b;
			i++;
		}
	}
	printf("c=%d\n",c);
	return 0;
  
  
  #include<stdio.h>
#include<string.h>
int main()
{
	char str[]="2+3-2+5-1+6";
	int c=str[0]-'0';
	int i;
	for(i=1;i<strlen(str);i++)
	{
		if(str[i]=='+')
		{
			int a=str[i+1]-'0';
			c=c+a;
			i++;
		}
		else if(str[i]=='-')
		{
			int b=str[i+1]-'0';
			c=c-b;
			i++;
		}
	}
	printf("c=%d\n",c);
	return 0;
}


#include<stdio.h>
#include<string.h>
int main()
{
	char str[]="2+3";
	int c=str[0]-'0';
	int i;
	for(i=1;i<strlen(str);i++)
	{
		if(str[i]=='+')
		{
			int a=str[i+1]-'0';
			c=c+a;
			i++;
		}
	}
	printf("c=%d\n",c);
	return 0;
}
